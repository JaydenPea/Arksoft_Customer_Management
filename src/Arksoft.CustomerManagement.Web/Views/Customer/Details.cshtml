@model Arksoft.CustomerManagement.Application.Common.DTOs.CustomerDto

@{
    ViewData["Title"] = "Customer Details";
}

@section Scripts {
    <script src="~/js/delete-modal.js" asp-append-version="true"></script>
    <script src="~/js/customer-details.js" asp-append-version="true"></script>
    <script>
        // Set the delete URL base for the modal
        window.customerDeleteBaseUrl = '@Url.Action("Delete", "Customer")';
    </script>
}

@section Modal {
    @await Html.PartialAsync("_DeleteConfirmationModal")
}

<div class="min-h-screen bg-black text-white">
    <div class="container mx-auto px-4 py-8">
        <!-- Header Section -->
        <div class="flex items-center justify-between mb-8">
            <div class="flex items-center">
                <a asp-action="Index" class="btn-secondary mr-4">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                    Back to List
                </a>
                <div>
                    <h1 class="text-3xl font-bold text-white flex items-center">
                        <svg class="w-8 h-8 mr-3 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Customer Details
                    </h1>
                    <p class="text-gray-400 mt-1">Complete customer information and contact details</p>
                </div>
            </div>
            
            <div class="flex space-x-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-primary">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit Customer
                </a>
                <button type="button" onclick="confirmDelete(@Model.Id, '@Model.Name')" class="btn-danger">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Delete
                </button>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success mb-6" role="alert">
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    @TempData["Success"]
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error mb-6" role="alert">
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    @TempData["Error"]
                </div>
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Main Customer Information -->
            <div class="lg:col-span-2">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-lg font-semibold text-white flex items-center">
                            <svg class="w-5 h-5 mr-2 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                            Company Information
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="space-y-6">
                            <!-- Company Name -->
                            <div>
                                <label class="form-label">Company Name <span class="text-red-400">*</span></label>
                                <div class="bg-gray-800 border border-gray-700 rounded-md px-3 py-2 text-white">
                                    <strong class="text-lg">@Model.Name</strong>
                                </div>
                            </div>

                            <!-- Address -->
                            <div>
                                <label class="form-label">Address <span class="text-red-400">*</span></label>
                                <div class="bg-gray-800 border border-gray-700 rounded-md px-3 py-2 text-gray-300 min-h-20">
                                    @Model.Address
                                </div>
                            </div>

                            <!-- VAT Number -->
                            <div>
                                <label class="form-label">VAT Number</label>
                                <div class="bg-gray-800 border border-gray-700 rounded-md px-3 py-2">
                                    @if (!string.IsNullOrEmpty(Model.VatNumber))
                                    {
                                        <span class="badge badge-info text-sm">@Model.VatNumber</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-500">Not provided</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="lg:col-span-1">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-lg font-semibold text-white flex items-center">
                            <svg class="w-5 h-5 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            Contact Details
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="space-y-4">
                            <!-- Contact Person -->
                            <div>
                                <label class="form-label">Contact Person</label>
                                <div class="flex items-center p-3 bg-gray-800 border border-gray-700 rounded-md">
                                    <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    <span class="text-gray-300">
                                        @(Model.ContactPersonName ?? "Not provided")
                                    </span>
                                </div>
                            </div>

                            <!-- Email -->
                            <div>
                                <label class="form-label">Email Address</label>
                                <div class="flex items-center p-3 bg-gray-800 border border-gray-700 rounded-md">
                                    <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                    @if (!string.IsNullOrEmpty(Model.ContactPersonEmail))
                                    {
                                        <a href="mailto:@Model.ContactPersonEmail" class="text-blue-400 hover:text-blue-300 transition-colors">
                                            @Model.ContactPersonEmail
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-gray-500">Not provided</span>
                                    }
                                </div>
                            </div>

                            <!-- Phone -->
                            <div>
                                <label class="form-label">Telephone Number</label>
                                <div class="flex items-center p-3 bg-gray-800 border border-gray-700 rounded-md">
                                    <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                    </svg>
                                    @if (!string.IsNullOrEmpty(Model.TelephoneNumber))
                                    {
                                        <a href="tel:@Model.TelephoneNumber" class="text-blue-400 hover:text-blue-300 transition-colors">
                                            @Model.TelephoneNumber
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-gray-500">Not provided</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Record Information -->
                <div class="card mt-6">
                    <div class="card-header">
                        <h3 class="text-lg font-semibold text-white flex items-center">
                            <svg class="w-5 h-5 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Record Information
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="space-y-3 text-sm">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Customer ID:</span>
                                <span class="font-mono text-blue-400">#@Model.Id.ToString("D4")</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Created:</span>
                                <span class="text-gray-300">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Last Updated:</span>
                                <span class="text-gray-300">
                                    @(Model.UpdatedAt?.ToString("MMM dd, yyyy") ?? "Never")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-center space-x-4 mt-8 pt-8 border-t border-gray-700">
            <a asp-action="Index" class="btn-secondary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
                View All Customers
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-primary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Edit Customer
            </a>
        </div>
    </div>
</div>

