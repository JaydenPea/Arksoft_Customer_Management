@model Arksoft.CustomerManagement.Application.Common.DTOs.PagedResult<Arksoft.CustomerManagement.Application.Common.DTOs.CustomerListDto>

@{
    ViewData["Title"] = "Customer Management - List View";
    var search = ViewBag.Search as string;
    var sortBy = ViewBag.SortBy as string;
    var sortDesc = ViewBag.SortDesc as bool? ?? false;
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var pageSize = ViewBag.PageSize as int? ?? 10;
}


@section Scripts {
    <script src="~/js/delete-modal.js" asp-append-version="true"></script>
    <script src="~/js/customer-list.js" asp-append-version="true"></script>
    <script>
        // Set the delete URL base for the modal
        window.customerDeleteBaseUrl = '@Url.Action("Delete", "Customer")';
    </script>
}

@section Modal {
    @await Html.PartialAsync("_DeleteConfirmationModal")
}

<div class="min-h-screen bg-black text-white">
    <div class="container mx-auto px-4 py-8">
        <!-- Header Section -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-white flex items-center">
                    <svg class="w-8 h-8 mr-3 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    Customer Management
                </h1>
                <p class="text-gray-400 mt-1">Manage your customer database with advanced search and filtering</p>
            </div>
            <a asp-action="Create" class="btn-primary inline-flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add New Customer
            </a>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success mb-6" role="alert">
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    @TempData["Success"]
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error mb-6" role="alert">
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    @TempData["Error"]
                </div>
            </div>
        }

        <!-- Search and Filter Section -->
        <div class="card mb-6">
            <div class="card-header">
                <h3 class="text-lg font-semibold text-white flex items-center">
                    <svg class="w-5 h-5 mr-2 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    Search & Filter
                </h3>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index">
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                        <div class="md:col-span-2">
                            <label for="search" class="form-label">Search (Name or VAT Number)</label>
                            <input type="text" class="form-input" id="search" name="search" 
                                   value="@search" placeholder="Enter name or VAT number...">
                        </div>
                        <div>
                            <label for="sortBy" class="form-label">Sort By</label>
                            <select class="form-select" id="sortBy" name="sortBy">
                                <option value="">Default (Created Date)</option>
                                <option value="name" selected="@(sortBy == "name")">Name</option>
                                <option value="address" selected="@(sortBy == "address")">Address</option>
                                <option value="vatnumber" selected="@(sortBy == "vatnumber")">VAT Number</option>
                                <option value="createdat" selected="@(sortBy == "createdat")">Created Date</option>
                            </select>
                        </div>
                        <div>
                            <label for="sortDesc" class="form-label">Order</label>
                            <select class="form-select" id="sortDesc" name="sortDesc">
                                <option value="false" selected="@(!sortDesc)">Ascending</option>
                                <option value="true" selected="@sortDesc">Descending</option>
                            </select>
                        </div>
                    </div>
                    <div class="flex justify-end space-x-3 mt-4">
                        <button type="submit" class="btn-primary">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                            Search
                        </button>
                        <a asp-action="Index" class="btn-secondary">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                            Clear
                        </a>
                    </div>
                    <input type="hidden" name="page" value="1">
                    <input type="hidden" name="pageSize" value="@pageSize">
                </form>
            </div>
        </div>

        <!-- Customer Table -->
        <div class="card">
            <div class="card-header">
                <div class="flex justify-between items-center">
                    <h3 class="text-lg font-semibold text-white flex items-center">
                        <svg class="w-5 h-5 mr-2 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                        Customer List
                        <span class="badge badge-primary ml-3">@Model.TotalCount Total</span>
                    </h3>
                    <div class="text-sm text-gray-400">
                        Showing @((currentPage - 1) * pageSize + 1) to @Math.Min(currentPage * pageSize, Model.TotalCount) of @Model.TotalCount entries
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model.Items.Any())
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="py-4 px-6">Name</th>
                                    <th class="py-4 px-6">Address</th>
                                    <th class="py-4 px-6">Contact Person</th>
                                    <th class="py-4 px-6">Email</th>
                                    <th class="py-4 px-6">Phone</th>
                                    <th class="py-4 px-6">VAT Number</th>
                                    <th class="py-4 px-6 text-center" width="180">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model.Items)
                                {
                                    <tr class="hover:bg-gray-800 transition-colors duration-200">
                                        <td class="py-4 px-6">
                                            <div class="font-semibold text-white">@customer.Name</div>
                                        </td>
                                        <td class="py-4 px-6">
                                            <div class="text-gray-400 max-w-xs truncate" title="@customer.Address">
                                                @customer.Address
                                            </div>
                                        </td>
                                        <td class="py-4 px-6">
                                            <div class="text-gray-300">
                                                @(customer.ContactPersonName ?? "-")
                                            </div>
                                        </td>
                                        <td class="py-4 px-6">
                                            @if (!string.IsNullOrEmpty(customer.ContactPersonEmail))
                                            {
                                                <a href="mailto:@customer.ContactPersonEmail" 
                                                   class="text-blue-400 hover:text-blue-300 flex items-center">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                                    </svg>
                                                    <span class="truncate max-w-32">@customer.ContactPersonEmail</span>
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500">-</span>
                                            }
                                        </td>
                                        <td class="py-4 px-6">
                                            @if (!string.IsNullOrEmpty(customer.TelephoneNumber))
                                            {
                                                <a href="tel:@customer.TelephoneNumber" 
                                                   class="text-blue-400 hover:text-blue-300 flex items-center">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                                    </svg>
                                                    @customer.TelephoneNumber
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500">-</span>
                                            }
                                        </td>
                                        <td class="py-4 px-6">
                                            @if (!string.IsNullOrEmpty(customer.VatNumber))
                                            {
                                                <span class="badge badge-info">@customer.VatNumber</span>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500">-</span>
                                            }
                                        </td>
                                        <td class="py-4 px-6 text-center">
                                            <div class="flex justify-center space-x-1">
                                                <a asp-action="Details" asp-route-id="@customer.Id" 
                                                   class="btn-outline-secondary btn-sm" title="View Details">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                                    </svg>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@customer.Id" 
                                                   class="btn-outline-primary btn-sm" title="Edit">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                    </svg>
                                                </a>
                                                <button type="button" class="btn-outline-danger btn-sm" 
                                                        onclick="confirmDelete(@customer.Id, '@customer.Name')" title="Delete">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                    </svg>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <svg class="w-16 h-16 mx-auto text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                        <h3 class="text-lg font-semibold text-gray-400 mb-2">No customers found</h3>
                        @if (!string.IsNullOrEmpty(search))
                        {
                            <p class="text-gray-500 mb-4">Try adjusting your search criteria or <a asp-action="Index" class="text-blue-400 hover:text-blue-300">view all customers</a>.</p>
                        }
                        else
                        {
                            <p class="text-gray-500 mb-4">Get started by adding your first customer.</p>
                        }
                        <a asp-action="Create" class="btn-primary inline-flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            Add First Customer
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="pagination">
                <div class="flex items-center space-x-2">
                    <!-- Previous Button -->
                    @if (Model.HasPreviousPage)
                    {
                        <a asp-action="Index" 
                           asp-route-page="@(currentPage - 1)" 
                           asp-route-search="@search"
                           asp-route-sortBy="@sortBy"
                           asp-route-sortDesc="@sortDesc"
                           asp-route-pageSize="@pageSize"
                           class="px-3 py-2 text-sm font-medium text-gray-400 bg-gray-800 border border-gray-700 rounded-md hover:bg-gray-700 hover:text-white transition-colors duration-200">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                            </svg>
                            Previous
                        </a>
                    }

                    <!-- Page Numbers -->
                    @{
                        var startPage = Math.Max(1, currentPage - 2);
                        var endPage = Math.Min(Model.TotalPages, currentPage + 2);
                    }

                    @if (startPage > 1)
                    {
                        <a asp-action="Index" asp-route-page="1" asp-route-search="@search" asp-route-sortBy="@sortBy" asp-route-sortDesc="@sortDesc" asp-route-pageSize="@pageSize"
                           class="px-3 py-2 text-sm font-medium text-gray-400 bg-gray-800 border border-gray-700 rounded-md hover:bg-gray-700 hover:text-white transition-colors duration-200">1</a>
                        @if (startPage > 2)
                        {
                            <span class="px-3 py-2 text-sm text-gray-600">...</span>
                        }
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        if (i == currentPage)
                        {
                            <span class="px-3 py-2 text-sm font-medium text-white bg-blue-600 border border-blue-600 rounded-md">@i</span>
                        }
                        else
                        {
                            <a asp-action="Index" asp-route-page="@i" asp-route-search="@search" asp-route-sortBy="@sortBy" asp-route-sortDesc="@sortDesc" asp-route-pageSize="@pageSize"
                               class="px-3 py-2 text-sm font-medium text-gray-400 bg-gray-800 border border-gray-700 rounded-md hover:bg-gray-700 hover:text-white transition-colors duration-200">@i</a>
                        }
                    }

                    @if (endPage < Model.TotalPages)
                    {
                        @if (endPage < Model.TotalPages - 1)
                        {
                            <span class="px-3 py-2 text-sm text-gray-600">...</span>
                        }
                        <a asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-search="@search" asp-route-sortBy="@sortBy" asp-route-sortDesc="@sortDesc" asp-route-pageSize="@pageSize"
                           class="px-3 py-2 text-sm font-medium text-gray-400 bg-gray-800 border border-gray-700 rounded-md hover:bg-gray-700 hover:text-white transition-colors duration-200">@Model.TotalPages</a>
                    }

                    <!-- Next Button -->
                    @if (Model.HasNextPage)
                    {
                        <a asp-action="Index" 
                           asp-route-page="@(currentPage + 1)"
                           asp-route-search="@search"
                           asp-route-sortBy="@sortBy"
                           asp-route-sortDesc="@sortDesc"
                           asp-route-pageSize="@pageSize"
                           class="px-3 py-2 text-sm font-medium text-gray-400 bg-gray-800 border border-gray-700 rounded-md hover:bg-gray-700 hover:text-white transition-colors duration-200">
                            Next
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>