@model Arksoft.CustomerManagement.Application.Common.DTOs.UpdateCustomerDto

@{
    ViewData["Title"] = "Edit Customer";
    var customerId = ViewBag.CustomerId as int? ?? 0;
}

<div class="min-h-screen bg-black text-white">
    <div class="container mx-auto px-4 py-8">
        <!-- Header Section -->
        <div class="flex items-center mb-8">
            <a asp-action="Index" class="btn-secondary mr-4">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to List
            </a>
            <div>
                <h1 class="text-3xl font-bold text-white flex items-center">
                    <svg class="w-8 h-8 mr-3 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit Customer
                </h1>
                <p class="text-gray-400 mt-1">Update customer information and contact details</p>
            </div>
        </div>

        <!-- Error Messages -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error mb-6" role="alert">
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    @TempData["Error"]
                </div>
            </div>
        }

        <!-- Edit Form -->
        <div class="card">
            <div class="card-header">
                <h3 class="text-lg font-semibold text-white flex items-center">
                    <svg class="w-5 h-5 mr-2 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Customer Information
                </h3>
                <p class="text-gray-400 text-sm mt-1">
                    Fields marked with <span class="text-red-400">*</span> are required
                </p>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-route-id="@customerId" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Name (Required) -->
                        <div class="md:col-span-2">
                            <label asp-for="Name" class="form-label">
                                Company Name <span class="text-red-400">*</span>
                            </label>
                            <input asp-for="Name" class="form-input" placeholder="Enter company name" />
                            <span asp-validation-for="Name" class="text-red-400 text-sm mt-1 block"></span>
                        </div>

                        <!-- Address (Required) -->
                        <div class="md:col-span-2">
                            <label asp-for="Address" class="form-label">
                                Address <span class="text-red-400">*</span>
                            </label>
                            <textarea asp-for="Address" class="form-input" rows="3" placeholder="Enter complete address"></textarea>
                            <span asp-validation-for="Address" class="text-red-400 text-sm mt-1 block"></span>
                        </div>

                        <!-- Contact Person Name -->
                        <div>
                            <label asp-for="ContactPersonName" class="form-label">
                                Contact Person Name
                            </label>
                            <input asp-for="ContactPersonName" class="form-input" placeholder="Enter contact person name" />
                            <span asp-validation-for="ContactPersonName" class="text-red-400 text-sm mt-1 block"></span>
                        </div>

                        <!-- Contact Person Email -->
                        <div>
                            <label asp-for="ContactPersonEmail" class="form-label">
                                Contact Person Email
                            </label>
                            <input asp-for="ContactPersonEmail" type="email" class="form-input" placeholder="Enter email address" />
                            <span asp-validation-for="ContactPersonEmail" class="text-red-400 text-sm mt-1 block"></span>
                            <p class="text-gray-500 text-xs mt-1">
                                <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Must be a valid email address if provided
                            </p>
                        </div>

                        <!-- Telephone Number -->
                        <div>
                            <label asp-for="TelephoneNumber" class="form-label">
                                Telephone Number
                            </label>
                            <input asp-for="TelephoneNumber" type="tel" class="form-input" placeholder="Enter phone number" />
                            <span asp-validation-for="TelephoneNumber" class="text-red-400 text-sm mt-1 block"></span>
                        </div>

                        <!-- VAT Number -->
                        <div>
                            <label asp-for="VatNumber" class="form-label">
                                VAT Number
                            </label>
                            <input asp-for="VatNumber" class="form-input" placeholder="Enter VAT number" style="text-transform: uppercase;" />
                            <span asp-validation-for="VatNumber" class="text-red-400 text-sm mt-1 block"></span>
                            <p class="text-gray-500 text-xs mt-1">
                                <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Letters and numbers only
                            </p>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="flex justify-between mt-8 pt-6 border-t border-gray-700">
                        <div class="flex space-x-3">
                            <a asp-action="Details" asp-route-id="@customerId" class="btn-outline-secondary">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                                View Details
                            </a>
                            <button type="button" onclick="confirmDelete(@customerId)" class="btn-danger">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                                Delete Customer
                            </button>
                        </div>
                        <div class="flex space-x-3">
                            <a asp-action="Index" class="btn-secondary">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                                Cancel
                            </a>
                            <button type="submit" class="btn-primary">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
                                </svg>
                                Update Customer
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Change History Info -->
        <div class="card mt-6">
            <div class="card-header">
                <h3 class="text-lg font-semibold text-white flex items-center">
                    <svg class="w-5 h-5 mr-2 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    Important Notes
                </h3>
            </div>
            <div class="card-body">
                <div class="bg-yellow-900 bg-opacity-30 border border-yellow-700 rounded-lg p-4">
                    <div class="flex items-start">
                        <svg class="w-5 h-5 text-yellow-400 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z"></path>
                        </svg>
                        <div>
                            <h4 class="font-semibold text-yellow-300 mb-2">Before Making Changes:</h4>
                            <ul class="text-yellow-200 text-sm space-y-1">
                                <li>• Ensure all information is accurate before saving</li>
                                <li>• Required fields (Name and Address) cannot be empty</li>
                                <li>• Email format will be validated if provided</li>
                                <li>• Changes will be logged with timestamp</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" tabindex="-1" aria-hidden="true" class="fixed inset-0 z-50 hidden overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 bg-black bg-opacity-75 transition-opacity" onclick="closeDeleteModal()"></div>
        <div class="inline-block align-bottom bg-gray-900 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
            <div class="bg-gray-900 px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="sm:flex sm:items-start">
                    <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-900 bg-opacity-50 sm:mx-0 sm:h-10 sm:w-10">
                        <svg class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
                        </svg>
                    </div>
                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                        <h3 class="text-lg leading-6 font-medium text-white">Confirm Delete</h3>
                        <div class="mt-2">
                            <p class="text-sm text-gray-400">
                                Are you sure you want to delete this customer?
                            </p>
                            <p class="text-sm text-gray-500 mt-1">This action cannot be undone.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bg-gray-800 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                <form id="deleteForm" method="post" class="w-full sm:w-auto">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-danger w-full sm:w-auto sm:ml-3">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Delete Customer
                    </button>
                </form>
                <button type="button" onclick="closeDeleteModal()" class="btn-secondary w-full sm:w-auto mt-3 sm:mt-0">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function confirmDelete(customerId) {
            document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + customerId;
            document.getElementById('deleteModal').classList.remove('hidden');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
        }

        // Auto-uppercase VAT number input
        document.querySelector('input[name="VatNumber"]').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });

        // Real-time validation feedback
        document.querySelectorAll('input, textarea').forEach(input => {
            input.addEventListener('blur', function() {
                // Clear previous validation state
                this.classList.remove('border-red-500', 'border-green-500');
                
                // Add validation state based on validity
                if (this.value.trim() && this.checkValidity()) {
                    this.classList.add('border-green-500');
                } else if (this.value.trim() && !this.checkValidity()) {
                    this.classList.add('border-red-500');
                }
            });
        });

        // Form submission loading state
        document.querySelector('form[asp-action="Edit"]').addEventListener('submit', function() {
            const submitBtn = document.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = `
                <svg class="animate-spin w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Updating...
            `;
        });

        // Escape key to close modal
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeDeleteModal();
            }
        });
    </script>
}