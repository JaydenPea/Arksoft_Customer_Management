@model Arksoft.CustomerManagement.Application.Common.DTOs.CreateCustomerDto

@{
    ViewData["Title"] = "Add New Customer";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/customer-create.js" asp-append-version="true"></script>
}

<div class="min-h-screen bg-black text-white">
    <div class="container mx-auto px-4 py-8">
        <!-- Header Section -->
        <div class="flex items-center mb-8">
            <a asp-action="Index" class="btn-secondary mr-4">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to List
            </a>
            <div>
                <h1 class="text-3xl font-bold text-white flex items-center">
                    <svg class="w-8 h-8 mr-3 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                    </svg>
                    Add New Customer
                </h1>
                <p class="text-gray-400 mt-1">Create a new customer record with all required information</p>
            </div>
        </div>

        <!-- Error Messages -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error mb-6" role="alert">
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    @TempData["Error"]
                </div>
            </div>
        }

        <!-- Create Form -->
        <div class="card">
            <div class="card-header">
                <h3 class="text-lg font-semibold text-white flex items-center">
                    <svg class="w-5 h-5 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Customer Information
                </h3>
                <p class="text-gray-400 text-sm mt-1">
                    Fields marked with <span class="text-red-400">*</span> are required
                </p>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Name (Required) -->
                        <div class="md:col-span-2">
                            <label asp-for="Name" class="form-label">
                                Company Name <span class="text-red-400">*</span>
                            </label>
                            <input asp-for="Name" class="form-input" placeholder="Enter company name" />
                            <span asp-validation-for="Name" class="text-red-400 text-sm mt-1 block"></span>
                        </div>

                        <!-- Address (Required) -->
                        <div class="md:col-span-2">
                            <label asp-for="Address" class="form-label">
                                Address <span class="text-red-400">*</span>
                            </label>
                            <textarea asp-for="Address" class="form-input" rows="3" placeholder="Enter complete address"></textarea>
                            <span asp-validation-for="Address" class="text-red-400 text-sm mt-1 block"></span>
                        </div>

                        <!-- Contact Person Name -->
                        <div>
                            <label asp-for="ContactPersonName" class="form-label">
                                Contact Person Name
                            </label>
                            <input asp-for="ContactPersonName" class="form-input" placeholder="Enter contact person name" />
                            <span asp-validation-for="ContactPersonName" class="text-red-400 text-sm mt-1 block"></span>
                        </div>

                        <!-- Contact Person Email -->
                        <div>
                            <label asp-for="ContactPersonEmail" class="form-label">
                                Contact Person Email
                            </label>
                            <input asp-for="ContactPersonEmail" type="email" class="form-input" placeholder="Enter email address" />
                            <span asp-validation-for="ContactPersonEmail" class="text-red-400 text-sm mt-1 block"></span>
                            <p class="text-gray-500 text-xs mt-1">
                                <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Must be a valid email address if provided
                            </p>
                        </div>

                        <!-- Telephone Number -->
                        <div>
                            <label asp-for="TelephoneNumber" class="form-label">
                                Telephone Number
                            </label>
                            <input asp-for="TelephoneNumber" type="tel" class="form-input" placeholder="Enter phone number" />
                            <span asp-validation-for="TelephoneNumber" class="text-red-400 text-sm mt-1 block"></span>
                        </div>

                        <!-- VAT Number -->
                        <div>
                            <label asp-for="VatNumber" class="form-label">
                                VAT Number
                            </label>
                            <input asp-for="VatNumber" class="form-input" placeholder="Enter VAT number" style="text-transform: uppercase;" />
                            <span asp-validation-for="VatNumber" class="text-red-400 text-sm mt-1 block"></span>
                            <p class="text-gray-500 text-xs mt-1">
                                <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Letters and numbers only
                            </p>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="flex justify-end space-x-4 mt-8 pt-6 border-t border-gray-700">
                        <a asp-action="Index" class="btn-secondary">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                            Cancel
                        </a>
                        <button type="submit" class="btn-primary">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
                            </svg>
                            Create Customer
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Requirements Card -->
        <div class="card mt-6">
            <div class="card-header">
                <h3 class="text-lg font-semibold text-white flex items-center">
                    <svg class="w-5 h-5 mr-2 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Validation Requirements
                </h3>
            </div>
            <div class="card-body">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                    <div class="space-y-2">
                        <h4 class="font-semibold text-gray-300">Required Fields:</h4>
                        <ul class="space-y-1 text-gray-400">
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Company Name (max 200 characters)
                            </li>
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Address (max 500 characters)
                            </li>
                        </ul>
                    </div>
                    <div class="space-y-2">
                        <h4 class="font-semibold text-gray-300">Optional Fields:</h4>
                        <ul class="space-y-1 text-gray-400">
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Contact Person (max 100 characters)
                            </li>
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Email (must be valid format)
                            </li>
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Phone (numbers and symbols only)
                            </li>
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                VAT Number (letters and numbers)
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

